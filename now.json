{
    "version": 2,
    "builds": [
        { "src": "public/*", "use": "@now/static" },
        { "src": "screenshot.js", "use": "@now/node", "config": { "maxLambdaSize": "40mb" } }
    ],
    "routes": [
        { "src": "/", "dest": "/public/index.html" },
        { "src": "/favicon.ico", "dest": "/public/favicon.ico" },
        { "src": "/(.+)", "dest": "/screenshot.js" }
    ]
}